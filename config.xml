<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.smb.univ.zlojow.toolkids" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Trail's</name>
    <description>
        La meilleure application pour randonneur !!
    </description>
    <author email="contact@williamzlojo.fr" href="">
        William Zlojo
    </author>
    <preference name="StatusBarBackgroundColor" value="#0b21ee" />
    <content src="index.html" />
    <icon src="/www/img/icon.png" />
    <access origin="*" />
    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name="Fullscreen" value="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
